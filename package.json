{
  "name": "koa-starter-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "wait-on dist/app.js && ./node_modules/.bin/nodemon --watch dist/ dist/app.js",
    "start:dev": "rm -rf dist/* && ./node_modules/.bin/concurrently npm:ts:watch npm:serve",
    "ts:lint": "./node_modules/.bin/tslint -p .",
    "ts:watch": "./node_modules/.bin/concurrently npm:ts:watch:backend npm:ts:watch:frontend",
    "ts:watch:backend": "./node_modules/.bin/tsc --build src/tsconfig.json -w --preserveWatchOutput",
    "ts:watch:frontend": "./node_modules/.bin/tsc --build src/frontend/tsconfig.json -w --preserveWatchOutput",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm"
  },
  "dependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-router": "^7.0.40",
    "@types/next": "^8.0.5",
    "axios": "^0.18.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "next": "^8.1.0",
    "pg": "^7.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.17",
    "wait-on": "^3.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
